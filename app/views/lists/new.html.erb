<!-- app/views/lists/new.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card to contain the form -->
      <div class="card shadow-lg p-4">
        <h1 class="text-center mb-4">Create a New List</h1>

        <%= simple_form_for @list, html: { class: 'form' } do |f| %>
          <div class="form-group">
            <%= f.input :name, label: "List Name", input_html: { class: 'form-control' } %>
          </div>

          <!-- Image Upload Field -->
          <div class="form-group">
            <%= f.input :image, as: :file, label: "Upload List Image", input_html: { class: 'form-control' } %>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <%= f.submit "Create List", class: "btn btn-primary bt n-lg mt-3"%>
              <%= link_to "Back to Lists", lists_path, class: "btn btn-primary bt n-lg mt-3" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
